<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="a14.raspberry3.sonicar">

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sonicar"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sonicar_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivityEric"
            android:label="SoniCar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="raspberry3.sonicar.Main"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/button_login_text">
            <intent-filter>
                <action android:name="raspberry3.sonicar.Login" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadingScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FullDisplay"
            android:label="@string/FullDisplay">
            <intent-filter>
                <action android:name="raspberry3.sonicar.Full_Display"/>
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
    </application>

</manifest>