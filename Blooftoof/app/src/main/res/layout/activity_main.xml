<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="staric.blooftoof.MainActivity">


    <ImageButton
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@android:drawable/stat_sys_data_bluetooth" />

    <ImageButton
        android:id="@+id/forward_button"
        android:layout_width="100dip"
        android:layout_height="200dp"
        android:layout_below="@+id/btnConnect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/car_birdeye" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView14"
        android:layout_marginBottom="97dp"
        android:rotation="150"
        android:visibility="visible"
        app:srcCompat="@drawable/wave1" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView15"
        android:layout_alignTop="@+id/imageView15"
        android:rotation="150"
        android:visibility="visible"
        app:srcCompat="@drawable/wave2" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:rotation="150"
        android:visibility="visible"
        app:srcCompat="@drawable/wave3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageView16"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imageView17"
        android:rotation="150"
        android:visibility="visible"
        app:srcCompat="@drawable/wave4" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageView17"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/Connect"
        android:rotation="-150"
        android:visibility="visible"
        app:srcCompat="@drawable/wave1" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView16"
        android:layout_alignTop="@+id/imageView18"
        android:rotation="-150"
        android:visibility="visible"
        app:srcCompat="@drawable/wave2" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView16"
        android:layout_alignTop="@+id/imageView19"
        android:rotation="-150"
        android:visibility="visible"
        app:srcCompat="@drawable/wave3" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView16"
        android:layout_alignTop="@+id/imageView13"
        android:rotation="-150"
        android:visibility="visible"
        app:srcCompat="@drawable/wave4" />

    <Switch
        android:id="@+id/Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Switch" />


</RelativeLayout>